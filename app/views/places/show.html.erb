<div class="">
  <div class="container mt-5"  >
    <div class="grid_place_profile">
      <div>
        <% if @place.photo.key %>
        <p><%= cl_image_tag @place.photo.key, class: "img-fluid shadow place_profile_pic " %></p>
        <% end %>
      </div>
      <div class = "profile_place_info">
        <h3 class = "h3_profile_place"><%= @place.title %></h3>
        <p><i class="fas fa-map-marker-alt"></i> <%= @place.address %></p>
        <% @place.genres.each do |genre| %>
          <span class="badge rounded-pill bg-dark">#<%= genre.name %></span>
        <% end %>
        <p class = "pt-3"><%= @place.description %></p>
         <% website = "#{@place.website}" %>
         <p class = ""> <%= link_to 'Our website', website, target: "_blank",  class: "btn-ghost" %></p>
      </div>
      <div class = "mt-5">
        <%if current_talent %>
          <div class = "mb-4">
            <%= render "promotions/form", place: @place, promotion: @promotion %>
          </div>
        <% end %>
        </div>
    </div>
  <div class="flex-space-between container mt-5 mb-5">
    <%= link_to places_path do %>
      <button class="bad_btn"><i class="fa fa-arrow-left" aria-hidden="true"></i> All Places</button>
    <% end %>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
  <br>
</div>
